{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-c",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",

                "-g",
                "-Wall",
                "-Wextra",

                "-lm",
                "-lpthread",
                "-ldl",
                "-lrt",
                "-lcrypt",
                "-lutil"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
